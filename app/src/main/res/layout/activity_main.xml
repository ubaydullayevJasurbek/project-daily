<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/blue_500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/navigationTopBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/menu_drawable"
                android:src="@drawable/ic_menu"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/daily"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/filterBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/filter_button"
                android:padding="2dp"
                android:src="@drawable/list_filter_plus"
                app:tint="@color/white" />
        </androidx.appcompat.widget.Toolbar>

        <!-- Income/Expense summary card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="14dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="4dp">

                <!-- Income section -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="14dp"
                        android:contentDescription="@string/incoming_add"
                        android:src="@drawable/circle_chevron_up"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/income_summa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/_30_000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/imageView2"
                        app:layout_constraintTop_toTopOf="@+id/imageView2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="@string/uzs"
                        android:textColor="#9E9E9E"
                        app:layout_constraintBottom_toBottomOf="@+id/income_summa"
                        app:layout_constraintStart_toEndOf="@+id/income_summa"
                        app:layout_constraintTop_toTopOf="@+id/income_summa" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/income"
                        android:textColor="#9E9E9E"
                        app:layout_constraintStart_toStartOf="@+id/income_summa"
                        app:layout_constraintTop_toBottomOf="@+id/income_summa" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="12dp"
                    android:background="#BDBDBD" />

                <!-- Expense section -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="14dp"
                        android:contentDescription="@string/incoming_add"
                        android:src="@drawable/red_circle_chevron_up"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/expenses_summa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/_30_000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/imageView3"
                        app:layout_constraintTop_toTopOf="@+id/imageView3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="@string/uzs"
                        android:textColor="#9E9E9E"
                        app:layout_constraintBottom_toBottomOf="@+id/expenses_summa"
                        app:layout_constraintStart_toEndOf="@+id/expenses_summa"
                        app:layout_constraintTop_toTopOf="@+id/expenses_summa" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/expenses"
                        android:textColor="#9E9E9E"
                        app:layout_constraintStart_toStartOf="@+id/expenses_summa"
                        app:layout_constraintTop_toBottomOf="@+id/expenses_summa" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:background="#9E9E9E"
            app:layout_constraintTop_toBottomOf="@+id/cardView" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/tab_layout_bg"
            app:tabBackground="@drawable/tabs_selector"
            app:tabIndicatorHeight="0dp"
            app:tabTextColor="@color/accent"
            app:tabSelectedTextColor="@color/white"
            app:tabRippleColor="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <!-- RecyclerView sections -->
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tab_layout"
            app:layout_constraintBottom_toTopOf="@+id/addBtn">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerIncome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:visibility="visible" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerExpenses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:visibility="visible" />
        </LinearLayout>

        <!-- Floating buttons -->
        <ImageButton
            android:id="@+id/addBtn"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_margin="24dp"
            android:background="@drawable/fab_btn"
            android:contentDescription="@string/incoming"
            android:src="@drawable/plus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:maxImageSize="12dp"
            app:useCompatPadding="true" />

        <ImageButton
            android:id="@+id/incomingBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/fab_btn"
            android:backgroundTint="@color/green"
            android:contentDescription="@string/filter_button"
            android:src="@drawable/red_arrow_up"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/addBtn"
            app:layout_constraintEnd_toEndOf="@+id/addBtn"
            app:layout_constraintStart_toStartOf="@+id/addBtn" />

        <TextView
            android:id="@+id/intcomingTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:elevation="4dp"
            android:paddingHorizontal="14dp"
            android:paddingVertical="8dp"
            android:text="@string/incoming_add"
            android:textColor="#9E9E9E"
            android:textSize="14sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/incomingBtn"
            app:layout_constraintEnd_toStartOf="@+id/incomingBtn"
            app:layout_constraintTop_toTopOf="@+id/incomingBtn" />

        <ImageButton
            android:id="@+id/outcomingBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/fab_btn"
            android:backgroundTint="@color/red_500"
            android:contentDescription="@string/filter_button"
            android:src="@drawable/red_arrow_up"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/incomingBtn"
            app:layout_constraintEnd_toEndOf="@+id/incomingBtn"
            app:layout_constraintStart_toStartOf="@+id/incomingBtn" />

        <TextView
            android:id="@+id/outcomingTtx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:elevation="4dp"
            android:paddingHorizontal="14dp"
            android:paddingVertical="6dp"
            android:text="@string/outcoming_add"
            android:textColor="#9E9E9E"
            android:textSize="14sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/outcomingBtn"
            app:layout_constraintEnd_toStartOf="@+id/outcomingBtn"
            app:layout_constraintTop_toTopOf="@+id/outcomingBtn" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_side"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        app:headerLayout="@layout/nav_header"
        app:itemIconSize="32dp"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/gray"
        app:menu="@menu/side_tabs" />

</androidx.drawerlayout.widget.DrawerLayout>
